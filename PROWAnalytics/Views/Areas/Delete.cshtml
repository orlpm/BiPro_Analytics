@model PROWAnalytics.Models.Area

@{
    ViewData["Title"] = "Delete";
}

<section id="adminRelaciones" class="d-flex  min-vh-100">
    <div class="container">

        <h1>Borrar</h1>

        <h3>Estás seguro de borrar esto?</h3>
        <div>
            <h4>Area</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdEmpresa)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdEmpresa)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Borrar" class="btn btn-danger" /> |
                <a asp-action="Index">Regresar a la lista</a>
            </form>
        </div>
    </div>
</section>
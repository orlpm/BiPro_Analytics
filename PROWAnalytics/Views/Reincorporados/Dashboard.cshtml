@model PROWAnalytics.Models.SeguimientoCovid
@{
    ViewData["Title"] = "Riesgos de contagio";
}

<section id="trabajadores" class="d-flex align-items-cente min-vh-100">
    <div class="container">

        <div class="section-title">
            <h2>Reincorporados </h2>
        </div>

        <a href="#graficos" class="btn btn-warning active scrollto" role="button" aria-pressed="true">Gráficos y estadísticas</a>
        <hr />

        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                <div class="form-row">
                    <div class="col-md-6 form-group">
                        <select asp-for="IdTrabajador" asp-items="@(new SelectList(@ViewBag.Trabajadores,"Id","Trabajador"))">
                            <option selected disabled>Seleccionar trabajador</option>
                        </select>
                    </div>
                    <div class="col-md-3 form-group">
                        <input type="submit" value="Buscar" class="btn btn-secondary" />
                    </div>
                </div>
            </div>
        </form>

        <div>
            <div class="row">
                @if (ViewBag.Unidades != null)
                {
                    <div class="col-md-3"><h4 class="title"> Buscar por Unidad</h4></div>
                }
                @if (ViewBag.Areas != null)
                {
                    <div class="col-md-3"><h4 class="title"> Buscar por Área</h4></div>
                }
            </div>

            <form asp-action="Index" method="get">
                <div class="form-actions no-color">
                    <div class="form-row">
                        @if (ViewBag.Unidades != null)
                        {
                            <div class="col-md-3 form-group">
                                <select title="Unidad" name="IdUnidad" asp-items="@(new SelectList(@ViewBag.Unidades,"Id","Unidad"))">
                                    <option selected disabled>Seleccionar unidad</option>
                                </select>
                            </div>
                        }

                        @if (ViewBag.Areas != null)
                        {
                            <div class="col-md-3 form-group">
                                <select name="IdArea" asp-items="@(new SelectList(@ViewBag.Areas,"Id","Area"))">
                                    <option selected disabled>Seleccionar Area</option>
                                </select>
                            </div>
                        }

                        @if (ViewBag.Unidades != null || ViewBag.Areas != null)
                        {
                            <div class="col-md-3 form-group">
                                <input type="submit" value="Buscar" class="btn btn-secondary" />
                            </div>
                        }
                    </div>
                </div>
            </form>
        </div>

        <div class="form-row">
            <div class="col-md-4 form-group">
                <a class="btn btn-secondary" asp-action="Index">Regresar lista completa</a>
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-4 form-group">
                <a class="btn btn-secondary" asp-action="Create">Crear nuevo</a>
            </div>
        </div>

    </div>
</section>

<hr />

<section id="graficos">
    <input type="hidden" id="HdnIdEmpresa" value="@ViewBag.IdEmpresa" />

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-sm-6  ">
                @*T4.A quienes se deben hacer pruebas para regresar a laborar. Asintomaticos con mas de 2 semanas.*@
                <form asp-action="PruebasParaRegresoALaborar" method="get">
                    <div class="form-actions no-color">
                        <h3>Descargar quien debe realizar pruebas para laborar</h3>
                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                <select asp-for="IdTrabajador" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                                    <option selected disabled>Seleccionar Empresa</option>
                                </select>
                            </div>
                            <div class="col-md-3 form-group">
                                <input type="submit" value="Descargar" class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </form>
                @*G4. A quienes se deben hacer pruebas de seguimiento*@
                <div class="x_panel">
                    <div class="x_title">
                        <h3>Pruebas de seguimiento</h3>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <canvas id="GrG4PacientesPruebas"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6  ">
                @*T5. Seguimiento general de pacientes contagiados. Como continuan, con o sin sintomas, hospitalizados*@
                <form asp-action="TrabajadoresSeguimientoGral" method="get">
                    <div class="form-actions no-color">
                        <h3>Descargar seguimiento general de pacientes contagiados</h3>
                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                <select asp-for="IdTrabajador" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                                    <option selected disabled>Seleccionar Empresa</option>
                                </select>
                            </div>
                            <div class="col-md-3 form-group">
                                <input type="submit" value="Descargar" class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </form>
                @*G5. Seguimiento general de contagiados*@
                <div class="x_panel">
                    <div class="x_title">
                        <h3>Seguimiento general de contagiados</h3>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <canvas id="GrG5TrabajadoresSeguimientoGral"></canvas>
                    </div>
                </div>
            </div>
        </div>

    </div>

</section>

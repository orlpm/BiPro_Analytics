@model PROWAnalytics.Models.FactorRiesgo
@{
    ViewData["Title"] = "Trabajadores";
}

<input type="hidden" id="HdnIdEmpresa" value="@ViewBag.IdEmpresa" />

<section id="trabajadores" class="d-flex align-items-cente min-vh-100">
    <div class="container">

        <div class="section-title">
            <h2>Factores de Riesgo dentro de Prow Analytics</h2>
        </div>

        <a href="#graficos" class="btn btn-warning active scrollto" role="button" aria-pressed="true">Gráficos y estadísticas</a>

        <hr />

        <div>
            <h4 class="title">Buscar por trabajador</h4>
            <form asp-action="Index" method="get">
                <div class="form-actions no-color">
                    <div class="form-row">
                        <div class="col-md-6 form-group">
                            <select asp-for="IdTrabajador" asp-items="@(new SelectList(@ViewBag.Trabajadores,"Id","Trabajador"))">
                                <option selected disabled>Seleccionar trabajador</option>
                            </select>
                        </div>
                        <div class="col-md-3 form-group">
                            <input type="submit" value="Buscar" class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <hr />

        <div>
            <div class="row">
                @if (ViewBag.Unidades != null)
                {
                    <div class="col-md-3"><h4 class="title"> Buscar por Unidad</h4></div>
                }
                @if (ViewBag.Areas != null)
                {
                    <div class="col-md-3"><h4 class="title"> Buscar por Área</h4></div>
                }
            </div>

            <form asp-action="Index" method="get">
                <div class="form-actions no-color">
                    <div class="form-row">
                        @if (ViewBag.Unidades != null)
                        {
                            <div class="col-md-3 form-group">
                                <select title="Unidad" name="IdUnidad" asp-items="@(new SelectList(@ViewBag.Unidades,"Id","Unidad"))">
                                    <option selected disabled>Seleccionar unidad</option>
                                </select>
                            </div>
                        }

                        @if (ViewBag.Areas != null)
                        {
                            <div class="col-md-3 form-group">
                                <select name="IdArea" asp-items="@(new SelectList(@ViewBag.Areas,"Id","Area"))">
                                    <option selected disabled>Seleccionar Area</option>
                                </select>
                            </div>
                        }

                        @if (ViewBag.Unidades != null || ViewBag.Areas != null)
                        {
                            <div class="col-md-3 form-group">
                                <input type="submit" value="Buscar" class="btn btn-secondary" />
                            </div>
                        }
                    </div>
                </div>
            </form>
        </div>

        <div class="row">
            <div class="col-md-3 form-group">
                <a class="btn btn-secondary" asp-action="Index">Regresar lista completa</a>
            </div>
            <div class="col-md-3 form-group">
                <a class="btn btn-secondary" asp-action="Create">Crear nuevo</a>
            </div>
        </div>
    </div>
</section>

<hr />

<section id="graficos">
    <input type="hidden" id="HdnIdEmpresa" value="@ViewBag.IdEmpresa" />

    <div class="container-fluid">
        <div class="row">

            @*T1. Edad y género *G1. Piramide poblacional*@
            <div class="col-md-6 col-sm-6  ">
                @*T1. Edad y género*@
                <form asp-action="ExportEdadGeneroCSV" method="get">
                    <div class="form-actions no-color">
                        <h3>Descargar Edad y género</h3>
                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                @if (User.IsInRole("Admin"))
                                {
                                    <select name="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                                        <option selected disabled>Seleccionar Empresa</option>
                                    </select>
                                }
                                else
                                {
                                    <select name="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa", @ViewBag.Empresas[0].Id))">
                                        <option selected disabled>Seleccionar Empresa</option>
                                    </select>
                                }
                            </div>
                            <div class="col-md-3 form-group">
                                <input type="submit" value="Descargar" class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </form>
                @*G1. Piramide poblacional*@
                <div class="x_panel">
                    <div class="x_title">
                        <h3>Pirámide Poblacional </h3>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <canvas id="PiramidePoblacional"></canvas>
                    </div>
                </div>
            </div>

            @*G2. Prevalencia de condiciones de salud de riesgo. -T2, T3-*@
            <div class="col-md-6 col-sm-6  ">
                @*T2.Enf. Crónicas DM, Hipertension Sobrepeso y Obesidad y asma, embarazo, cancer en tratamiento, enf. autoinmune en tx, EPOC*@
                <form asp-action="ExportEnfermedadesCronicasCSV" method="get">
                    <div class="form-actions no-color">
                        <h3>Descargar Enfermedades Crónicas </h3>
                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                @if (User.IsInRole("Admin"))
                                {
                                    <select name="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                                        <option selected disabled>Seleccionar Empresa</option>
                                    </select>
                                }
                                else
                                {
                                    <select name="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa", @ViewBag.Empresas[0].Id))">
                                        <option selected disabled>Seleccionar Empresa</option>
                                    </select>
                                }
                            </div>
                            <div class="col-md-3 form-group">
                                <input type="submit" value="Descargar" class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </form>
                @*T3. APNP. Tabaquismo, alcoholismo, drogas*@
                <form asp-action="ExportAPNPCSV" method="get">
                    <div class="form-actions no-color">
                        <h3>Descargar APNP</h3>
                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                @if (User.IsInRole("Admin"))
                                {
                                    <select name="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                                        <option selected disabled>Seleccionar Empresa</option>
                                    </select>
                                }
                                else
                                {
                                    <select name="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa", @ViewBag.Empresas[0].Id))">
                                        <option selected disabled>Seleccionar Empresa</option>
                                    </select>
                                }
                            </div>
                            <div class="col-md-3 form-group">
                                <input type="submit" value="Descargar" class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </form>
                <div class="x_panel">
                    <div class="x_title">
                        <h3>Prevalencia de condiciones de salud de riesgo </h3>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <canvas id="CondicionesRiesgoBar"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            @*G3. Prevalencia de riesgo de exposicion en casa y transporte*@
            <div class="col-md-6 col-sm-6 ">
                @*T4. Numero de personas en casa, tipo de casa, tipo de transporte, publico, propio, etc.*@
                <form asp-action="ExportRiesgosCasaTransporte" method="get">
                    <div class="form-actions no-color">
                        <h3>Descargar Riesgos Casa Transporte</h3>
                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                @if (User.IsInRole("Admin"))
                                {
                                    <select name="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                                        <option selected disabled>Seleccionar Empresa</option>
                                    </select>
                                }
                                else
                                {
                                    <select name="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa", @ViewBag.Empresas[0].Id))">
                                        <option selected disabled>Seleccionar Empresa</option>
                                    </select>
                                }
                            </div>
                            <div class="col-md-3 form-group">
                                <input type="submit" value="Descargar" class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </form>
                <div class="x_panel">
                    <div class="x_title">
                        <h3>Riesgo exposición en casa y transporte</h3>
                    </div>
                    <div class="x_content">
                        <canvas id="RiesgosExpocisionCasaTransporte"></canvas>
                    </div>
                </div>
            </div>
            @*G4. Prevalencia de riesgo dentro del espacio laboral*@
            <div class="col-md-6 col-sm-6 ">
                @*T5. Factores de riesgo laboral. Espacio, ventilacion, contacto, tiempo*@
                <form asp-action="ExportRiesgosLaboral" method="get">
                    <div class="form-actions no-color">
                        <h3>Descargar Riesgos Laboral</h3>
                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                @if (User.IsInRole("Admin"))
                                {
                                    <select name="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                                        <option selected disabled>Seleccionar Empresa</option>
                                    </select>
                                }
                                else
                                {
                                    <select name="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa", @ViewBag.Empresas[0].Id))">
                                        <option selected disabled>Seleccionar Empresa</option>
                                    </select>
                                }
                            </div>
                            <div class="col-md-3 form-group">
                                <input type="submit" value="Descargar" class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </form>
                <div class="x_panel">
                    <div class="x_title">
                        <h3>Riesgo de espacio de trabajo abierto y sin ventilación</h3>
                    </div>
                    <div class="x_content">
                        <canvas id="RiesgosEspacioLaboral"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            @*R1. Empleados que llenaron encuesta*@
            <div class="col-md-6 col-sm-6 ">
                @*M1. Empleados que llenaron su encuesta de identificacion y factores de riesgo.*@
                <form asp-action="ExportLlenadoFactoresRiesgos" method="get">
                    <div class="form-actions no-color">
                        <h3>Descargar Llenado Factores Riesgos</h3>
                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                @if (User.IsInRole("Admin"))
                                {
                                    <select name="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                                        <option selected disabled>Seleccionar Empresa</option>
                                    </select>
                                }
                                else
                                {
                                    <select name="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa", @ViewBag.Empresas[0].Id))">
                                        <option selected disabled>Seleccionar Empresa</option>
                                    </select>
                                }
                            </div>
                            <div class="col-md-3 form-group">
                                <input type="submit" value="Descargar" class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </form>
                <div class="x_panel">
                    <div class="x_title">
                        <h3>Empleados que llenaron encuesta</h3>
                    </div>
                    <div class="x_content">
                        <canvas id="LlenadoEmpleadosFactoresRiesgos"></canvas>
                    </div>
                </div>

            </div>
            @*R2. Grafico de M2*@
            <div class="col-md-6 col-sm-6 ">
                @*M2. Empleados con condiciones constantes de riesgo de contagio. -T4, T5-*@
                <form asp-action="ExportCondicionesConstantesRiesgosContagios" method="get">
                    <div class="form-actions no-color">
                        <h3>Descargar Condiciones Constantes Riesgos Contagios</h3>
                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                @if (User.IsInRole("Admin"))
                                {
                                    <select name="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                                        <option selected disabled>Seleccionar Empresa</option>
                                    </select>
                                }
                                else
                                {
                                    <select name="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa", @ViewBag.Empresas[0].Id))">
                                        <option selected disabled>Seleccionar Empresa</option>
                                    </select>
                                }
                            </div>
                            <div class="col-md-3 form-group">
                                <input type="submit" value="Descargar" class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </form>
                <div class="x_panel">
                    <div class="x_title">
                        <h3>Empleados con condiciones constantes de riesgo</h3>
                    </div>
                    <div class="x_content">
                        <canvas id="EmleadosCondicionesConstantes"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            @*R3. Grafico de M3*@
            <div class="col-md-6 col-sm-6 ">
                @*M3. Empleados con mayor riesgo de complicarse en caso de contagio -T1: MAYORES DE 55 AÑOS, T2, T3-*@
                <form asp-action="ExportComplicacionCasoContagioMayor55" method="get">
                    <div class="form-actions no-color">
                        <h3>Descargar Complicación Caso Contagio Mayor 55</h3>
                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                @if (User.IsInRole("Admin"))
                                {
                                    <select name="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                                        <option selected disabled>Seleccionar Empresa</option>
                                    </select>
                                }
                                else
                                {
                                    <select name="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa", @ViewBag.Empresas[0].Id))">
                                        <option selected disabled>Seleccionar Empresa</option>
                                    </select>
                                }
                            </div>
                            <div class="col-md-3 form-group">
                                <input type="submit" value="Descargar" class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </form>
                <div class="x_panel">
                    <div class="x_title">
                        <h3>Empleados con mayor riesgo de complicarse</h3>
                    </div>
                    <div class="x_content">
                        <canvas id="EmpleadosRiesgoComplicaciones"></canvas>
                    </div>
                </div>
            </div>
        </div>

    </div>

</section>


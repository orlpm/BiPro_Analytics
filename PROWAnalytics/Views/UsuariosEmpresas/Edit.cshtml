@model PROWAnalytics.Models.UsuarioEmpresa

@{
    ViewData["Title"] = "Edit";
}

<section id="adminRelaciones" class="d-flex  min-vh-100">
    <div class="container">
        <h1>Edit</h1>

        <h4>UsuarioEmpresa</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="IdUsuario" class="control-label"></label>
                        @if (ViewBag.Usuarios != null)
                        {
                            <select asp-for="IdUsuario" asp-items="@(new SelectList(@ViewBag.Usuarios,"IdUsuario","Usuario"))">
                                <option selected disabled>Seleccionar opción</option>
                            </select>
                        }
                        else
                        {
                            <input asp-for="IdUsuario" class="form-control" />
                        }
                        <span asp-validation-for="IdUsuario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdEmpresa" class="control-label"></label>
                        @if (ViewBag.Empresas != null)
                        {
                            <select asp-for="IdEmpresa" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                                <option selected disabled>Seleccionar opción</option>
                            </select>
                        }
                        else
                        {
                            <input asp-for="IdEmpresa" class="form-control" />
                        }
                        <span asp-validation-for="IdEmpresa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdRole" class="control-label"></label>
                        @if (ViewBag.Roles != null)
                        {
                            <select asp-for="IdRole" asp-items="@(new SelectList(@ViewBag.Roles,"IdRole","Role"))">
                                <option selected disabled>Seleccionar opción</option>
                            </select>
                        }
                        else
                        {
                            <input asp-for="IdRole" class="form-control" />
                        }
                        <span asp-validation-for="IdRole" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Regresar a la lista</a>
        </div>

    </div>
</section>
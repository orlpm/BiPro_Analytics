                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SeEncuentraEn)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdTrabajador)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdTrabajador)

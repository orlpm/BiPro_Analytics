@model BiPro_Analytics.Models.ReporteContagio
@{
    ViewData["Title"] = "Trabajadores";
}

<section id="trabajadores" class="d-flex align-items-cente min-vh-100">
    <div class="container">
        <div class="text-center">
            <h1 class="display-4">Seguimiento de Covid</h1>

            <a href="#graficos" class="btn btn-info active scrollto" role="button" aria-pressed="true">Graficos y estadisticas</a>
            <hr />

            <form asp-action="Index" method="get">
                <div class="form-actions no-color">
                    <p>
                        Bucar por trabajador:
                        <select asp-for="IdEmpresa" asp-items="@(new SelectList(@ViewBag.Trabajadores,"Id","Trabajador"))">
                            <option selected disabled>Seleccionar trabajador</option>
                        </select>
                        <input type="submit" value="Buscar" class="btn btn-default" />
                    </p>
                </div>
            </form>
            <form asp-action="Index" method="get">
                <div class="form-actions no-color">
                    <p>
                        Buscar por Unidad:
                        <select title="Unidad" name="IdUnidad" asp-items="@(new SelectList(@ViewBag.Unidades,"Id","Name"))">
                            <option selected disabled>Seleccionar unidad</option>
                        </select>
                    </p>
                </div>
                <div class="form-actions no-color">
                    <p>
                        Area:
                        <select name="IdArea" asp-items="@(new SelectList(@ViewBag.Areas,"Id","Name"))">
                            <option selected disabled>Seleccionar unidad</option>
                        </select>
                    </p>
                </div>
                <input type="submit" value="Buscar" class="btn btn-default" />
            </form>
            <div>
                <p>
                    <a asp-action="Create">Crear nuevo</a>
                </p>
            </div>
            <div>
                <a asp-action="Index">Regresar lista completa</a>
            </div>

        </div>
    </div>
</section>

<hr />

<section id="graficos">
    <input type="hidden" id="HdnIdEmpresa" value="@ViewBag.IdEmpresa" />

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-sm-6  ">
                @*T4.A quienes se deben hacer pruebas para regresar a laborar. Asintomaticos con mas de 2 semanas*@
                <form asp-action="ExportPruebasParaLaborar" method="get">
                    <div class="form-actions no-color">
                        <h3>Pruebas para regresar a laborar</h3>
                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                <select asp-for="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                                    <option selected disabled>Seleccionar Empresa</option>
                                </select>
                            </div>
                            <div class="col-md-3 form-group">
                                <input type="submit" value="Buscar" class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </form>
                @*G4. A quienes se deben hacer pruebas de seguimiento*@
                <div class="x_panel">
                    <div class="x_title">
                        <h3>Pruebas de seguimiento</h3>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <canvas id="PiramidePoblacional"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6  ">
                @*T5. Seguimiento general de pacientes contagiados. Como continuan, con o sin sintomas, hospitalizados*@
                <form asp-action="ExportAPNPCSV" method="get">
                    <div class="form-actions no-color">
                        <h3>Seguimiento general de pacientes contagiados</h3>
                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                <select asp-for="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                                    <option selected disabled>Seleccionar Empresa</option>
                                </select>
                            </div>
                            <div class="col-md-3 form-group">
                                <input type="submit" value="Buscar" class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </form>
                @*G5. Seguimiento general de contagiados*@
                <div class="x_panel">
                    <div class="x_title">
                        <h3>Seguimiento general de contagiados</h3>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <canvas id="CondicionesRiesgoBar"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-6  ">
                @*T6. Numero semanal de positivos y sospechosos*@
                <form asp-action="ExportPruebasParaLaborar" method="get">
                    <div class="form-actions no-color">
                        <h3>Numero semanal de positivos y sospechosos</h3>
                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                <select asp-for="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                                    <option selected disabled>Seleccionar Empresa</option>
                                </select>
                            </div>
                            <div class="col-md-3 form-group">
                                <input type="submit" value="Buscar" class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </form>
                @*G6. Positivos y sospechosos semanales*@
                <div class="x_panel">
                    <div class="x_title">
                        <h3>Positivos y sospechosos semanales</h3>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <canvas id="SospechososSemIdGrafica"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6  ">
                @*T.7 Numero semanal de positivos y sospechosos por área.*@
                <form asp-action="ExportAPNPCSV" method="get">
                    <div class="form-actions no-color">
                        <h3>Numero semanal de positivos y sospechosos por área</h3>
                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                <select asp-for="IdEmpresa" class="form-control" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                                    <option selected disabled>Seleccionar Empresa</option>
                                </select>
                            </div>
                            <div class="col-md-3 form-group">
                                <input type="submit" value="Buscar" class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </form>
                @*G7. Número semanal de positivos y sospechosos por área*@
                <div class="x_panel">
                    <div class="x_title">
                        <h3>Número semanal de positivos y sospechosos por área</h3>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <canvas id="CondicionesRiesgoBar"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


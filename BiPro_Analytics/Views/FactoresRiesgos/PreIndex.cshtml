@model BiPro_Analytics.Models.FactorRiesgo
@{
    ViewData["Title"] = "Trabajadores";
}

<input type="hidden" id="HdnIdEmpresa" value="@ViewBag.IdEmpresa" />

<section id="trabajadores" class="d-flex align-items-cente min-vh-100">
    <div class="container">

        <div class="section-title">
            <h2>Factores de Riesgo dentro de Bipro Analytics</h2>
        </div>

        <a href="#graficos" class="btn btn-info active scrollto" role="button" aria-pressed="true">Graficos y estadisticas</a>

        <hr/>

        <div>
            <h4 class="title">Buscar por trabajador</h4>
            <form asp-action="Index" method="get">
                <div class="form-actions no-color">
                    <div class="form-row">
                        <div class="col-md-6 form-group">
                            <select asp-for="IdTrabajador" asp-items="@(new SelectList(@ViewBag.Trabajadores,"Id","Trabajador"))">
                                <option selected disabled>Seleccionar trabajador</option>
                            </select>
                        </div>
                        <div class="col-md-3 form-group">
                            <input type="submit" value="Buscar" class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <hr/>

        <div>
            <h4 class="title">Buscar por Unidad y/o Area</h4>
            <form asp-action="Index" method="get">
                <div class="form-actions no-color">
                    <div class="form-row">
                        <div class="col-md-3 form-group">
                            <select title="Unidad" name="IdUnidad" asp-items="@(new SelectList(@ViewBag.Unidades,"Id","Unidad"))">
                                <option selected disabled>Seleccionar unidad</option>
                            </select>
                        </div>
                        <div class="col-md-3 form-group">
                            <select name="IdArea" asp-items="@(new SelectList(@ViewBag.Areas,"Id","Area"))">
                                <option selected disabled>Seleccionar Area</option>
                            </select>
                        </div>
                        <div class="col-md-3 form-group">
                            <input type="submit" value="Buscar" class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="row">
            <div class="col-md-3 form-group">
                <a class="btn btn-secondary" asp-action="Index">Regresar lista completa</a>
            </div>
            <div class="col-md-3 form-group">
                <a class="btn btn-secondary" asp-action="Create">Crear nuevo</a>
            </div>
        </div>
    </div>
</section>


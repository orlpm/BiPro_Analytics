@model BiPro_Analytics.Models.SeguimientoCovid

@{
    ViewData["Title"] = "Create";
}

<section id="trabajadores" class="d-flex align-items-cente min-vh-100">
    <div class="container">
        @*<h1>Crear</h1>*@

        <h4>Seguimiento de Covid</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p><strong>Ingrese el estado en el que se encuentra el paciente:</strong></p>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="EstatusPaciente" class="control-label"></label>
                        <input asp-for="EstatusPaciente" class="form-control" />
                        <span asp-validation-for="EstatusPaciente" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-9"></div>
            </div>
            <hr />
            <p><strong>Seleccione que síntomas presenta:</strong></p>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="SintomasMayores" /> @Html.DisplayNameFor(model => model.SintomasMayores)
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="SintomasMenores" /> @Html.DisplayNameFor(model => model.SintomasMenores)
                        </label>
                    </div>
                </div>
                <div class="col-md-6"></div>
            </div>
            <hr />
            <p><strong>Seleccione el estatus del paciente dependiendo el lugar en donde se encuentre:</strong></p>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="EstatusEnCasa" class="control-label"></label>
                        <select class="form-control" asp-for="EstatusEnCasa">
                            <option value="0" selected disabled>Seleccionar opción</option>
                            <option value="1">Asintomáticos con menos de 2 semanas</option>
                            <option value="2">Asintomáticos con más de 2 semanas</option>
                        </select>
                        <span asp-validation-for="EstatusEnCasa" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="EstatusEnHospital" class="control-label"></label>
                        <select class="form-control" asp-for="EstatusEnHospital">
                            <option value="0" selected disabled>Seleccionar opción</option>
                            <option value="1">Intubado</option>
                            <option value="2">En terapia</option>
                            <option value="3">Dado de alta</option>
                            <option value="4">En aislamiento</option>
                            <option value="5">Falleció</option>
                        </select>
                        <span asp-validation-for="EstatusEnHospital" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6"></div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="FechaSeguimiento" class="control-label"></label>
                        <input asp-for="FechaSeguimiento" class="form-control" />
                        <span asp-validation-for="FechaSeguimiento" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-9"></div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="IdTrabajador" class="control-label">Trabajador</label>
                        @if (ViewBag.Trabajadores != null)
                        {
                            <select class="form-control" asp-for="IdTrabajador" asp-items="@(new SelectList(@ViewBag.Trabajadores,"Id","Trabajador"))">
                                <option selected disabled>Seleccionar opción</option>
                            </select>
                        }
                        else
                        {
                            <input asp-for="IdTrabajador" class="form-control" />
                        }
                        <span asp-validation-for="IdTrabajador" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-9"></div>
            </div>
            <div class="row mt-4">
                <div class="col-md-3">
                    <div class="form-group text-right">
                        <input type="submit" value="Crear" class="btn btn-primary w-25" />
                    </div>
                </div>
                <div class="col-md-9"></div>
            </div>
        </form>

        <div class="row my-4">
            <div class="col-md-3">
                <a class="stretched-link" asp-action="Index">Regresar a la lista</a>
            </div>
            <div class="col-md-9"></div>
        </div>
    </div>
</section>


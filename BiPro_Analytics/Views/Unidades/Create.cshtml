@model BiPro_Analytics.Models.Unidad

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Unidad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEmpresa" class="control-label">Empresa</label>
                @if (ViewBag.Empresas != null)
                {
                    <select asp-for="IdEmpresa" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                        <option selected disabled>Seleccionar opción</option>
                    </select>
                }
                else
                {
                    <input asp-for="IdEmpresa" class="form-control" />
                }
                <span asp-validation-for="IdEmpresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


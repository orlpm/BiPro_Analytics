@model BiPro_Analytics.Models.RiesgoContagio

@{
    ViewData["Title"] = "Create";
}

<section id="trabajadores" class="d-flex align-items-cente min-vh-100">
    <div class="container">

        <h1>Crear</h1>

        <h4>Riesgos de Contagio</h4>
        <hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <p><strong>En caso de contacto con personas contagiadas de covid y/o de haber viajado marque la casilla corespondiente:</strong></p>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="ContactoCovidCasa" /> @Html.DisplayNameFor(model => model.ContactoCovidCasa)
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="ContactoCovidTrabajo" /> @Html.DisplayNameFor(model => model.ContactoCovidTrabajo)
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="ContactoCovidFuera" /> @Html.DisplayNameFor(model => model.ContactoCovidFuera)
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="ViajesMultitudes" /> @Html.DisplayNameFor(model => model.ViajesMultitudes)
                        </label>
                    </div>
                </div>
            </div>
            <div>
                <p><strong>Marque la casilla correspondiente si ha tenido alguno de los siguientes sintomas:</strong></p>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="TosRecurrente" /> @Html.DisplayNameFor(model => model.TosRecurrente)
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Tos" /> @Html.DisplayNameFor(model => model.Tos)
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="DificultadRespirar" /> @Html.DisplayNameFor(model => model.DificultadRespirar)
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="TempMayor38" /> @Html.DisplayNameFor(model => model.TempMayor38)
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Resfriado" /> @Html.DisplayNameFor(model => model.Resfriado)
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Escalofrios" /> @Html.DisplayNameFor(model => model.Escalofrios)
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="DolorMuscular" /> @Html.DisplayNameFor(model => model.DolorMuscular)
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="NauseaVomito" /> @Html.DisplayNameFor(model => model.NauseaVomito)
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Diarrea" /> @Html.DisplayNameFor(model => model.Diarrea)
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                </div>
            </div>
            <div class="row">
                <p><strong>En caso de tener resultados de Olfatometría favor de seleccioanar resultado</strong></p>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Olfatometria" class="control-label"></label>
                        <select asp-for="Olfatometria">
                            <option selected disabled>Seleccionar opción</option>
                            <option>Normal</option>
                            <option>Anosmia</option>
                            <option>Hiposmia</option>
                        </select>
                        <span asp-validation-for="Olfatometria" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Trabajador" class="control-label">Trabajador</label>
                        @if (ViewBag.Trabajadores != null)
                        {
                            <select asp-for="IdTrabajador" asp-items="@(new SelectList(@ViewBag.Trabajadores,"Id","Trabajador"))">
                                <option selected disabled>Seleccionar opción</option>
                            </select>
                        }
                        else
                        {
                            <input asp-for="IdTrabajador" class="form-control" />
                        }
                        <span asp-validation-for="IdTrabajador" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-md-4">
                <a asp-action="Index">Regresar a la lista</a>
            </div>
        </div>
    </div>
</section>
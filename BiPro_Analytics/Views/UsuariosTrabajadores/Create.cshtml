@model BiPro_Analytics.Models.UsuarioTrabajador

@{
    ViewData["Title"] = "Create";
}

<section id="adminRelaciones" class="d-flex  min-vh-100">
    <div id="grayTransparent" class="container">

        <h1>Create</h1>

        <h4>UsuarioTrabajador</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label"></label>
                        @if (ViewBag.Usuarios != null)
                        {
                            <select asp-for="UserId" asp-items="@(new SelectList(@ViewBag.Usuarios,"IdUsuario","Usuario"))">
                                <option selected disabled>Seleccionar opción</option>
                            </select>
                        }
                        else
                        {
                            <input asp-for="UserId" class="form-control" />
                        }
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TrabajadorId" class="control-label"></label>
                        @if (ViewBag.Trabajadores != null)
                        {
                            <select asp-for="TrabajadorId" asp-items="@(new SelectList(@ViewBag.Trabajadores,"Id","Trabajador"))">
                                <option selected disabled>Seleccionar opción</option>
                            </select>
                        }
                        else
                        {
                            <input asp-for="TrabajadorId" class="form-control" />
                        }
                        <span asp-validation-for="TrabajadorId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CodigoEmpresa" class="control-label"></label>
                        <input asp-for="CodigoEmpresa" class="form-control" />
                        <span asp-validation-for="CodigoEmpresa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Regresar a la lista</a>
        </div>

</div>
</section>
@model BiPro_Analytics.Models.Trabajador
@{
    ViewData["Title"] = "Trabajadores";
}

<div class="text-center">
    <h1 class="display-4">Trabajadores dentro de Bipro Analytics</h1>

    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Empresa: <select asp-for="IdEmpresa" asp-items="@(new SelectList(@ViewBag.Empresas,"Id","Empresa"))">
                    <option selected disabled>Seleccionar opción</option>
                </select>
                Trabajador: <select asp-for="IdTrabajador" asp-items="@(new SelectList(@ViewBag.Trabajadores,"Id","Trabajador"))">
                    <option selected disabled>Seleccionar opción</option>
                </select>
                <input type="submit" value="Buscar" class="btn btn-default" /> |
                <a asp-action="Index">Regresar lista completa</a>
            </p>
        </div>
    </form>

</div>


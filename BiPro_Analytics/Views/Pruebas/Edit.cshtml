@model BiPro_Analytics.Models.Prueba

@{
    ViewData["Title"] = "Editar";
}


<section id="trabajadores" class="d-flex align-items-cente min-vh-100">
    <div class="container">
        <h1>Crear</h1>

        <h4>Resultados de Pruebas</h4>
        <hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div>
                <p><strong>Ingrese fecha y lugar de diagnostico</strong></p>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="FechaDiagnostico" class="control-label"></label>
                        <input asp-for="FechaDiagnostico" class="form-control" />
                        <span asp-validation-for="FechaDiagnostico" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Lugar" class="control-label"></label>
                        <input asp-for="Lugar" class="form-control" />
                        <span asp-validation-for="Lugar" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                </div>
            </div>
            <hr />
            <p><strong>Ingrese el tipo de prueba y resultado del diagnostico</strong></p>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="TipoPrueba" class="control-label"></label>
                        <select asp-for="TipoPrueba">
                            <option selected disabled>Seleccionar opción</option>
                            <option>PCR</option>
                            <option>Prueba rápida en sangre</option>
                            <option>Prueba rápida con pinchazo en el dedo</option>
                            <option>Rapida nasal</option>
                            <option>Tomografía</option>
                        </select>
                        <span asp-validation-for="TipoPrueba" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="DiagnosticoCovid" class="control-label"></label>
                        <select asp-for="DiagnosticoCovid">
                            <option selected disabled>Seleccionar opción</option>
                            <option>Positivo</option>
                            <option>Negativo</option>
                        </select>
                        <span asp-validation-for="DiagnosticoCovid" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                </div>
            </div>
            <hr />
            <p><strong>Si todavía no cuenta con prueba confirmatoria, sospecha de COVID-19 debido:</strong></p>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="SintomasCovid" /> @Html.DisplayNameFor(model => model.SintomasCovid)
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="RadiografiaTorax" /> @Html.DisplayNameFor(model => model.RadiografiaTorax)
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Tomografia" /> @Html.DisplayNameFor(model => model.Tomografia)
                        </label>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="IdTrabajador" class="control-label">Trabajador</label>
                            @if (ViewBag.Trabajadores != null)
                            {
                                <select asp-for="IdTrabajador" asp-items="@(new SelectList(@ViewBag.Trabajadores,"Id","Trabajador"))">
                                    <option selected disabled>Seleccionar opción</option>
                                </select>
                            }
                            else
                            {
                                <input asp-for="IdTrabajador" class="form-control" />
                            }
                            <span asp-validation-for="IdTrabajador" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-3">

                </div>
                <div class="col-md-3">

                </div>
            </div>

            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-3">

                </div>
                <div class="col-md-3">

                </div>
                <div class="col-md-3">

                </div>
            </div>

        </form>

        <div>
            <a asp-action="Index">Regresar a la lista</a>
        </div>
    </div>
</section>
